{
  "name": "haet/css-to-inline-styles",
  "type": "library",
  "description": "Only a Fork of -> CssToInlineStyles is a class that enables you to convert HTML-pages/files into HTML-pages/files with inline styles. This is very useful when you're sending emails.",
  "keywords": [
    "email",
    "css-to-html",
    "CSSToHtml",
    "CSSinline",
    "inline",
    "style",
    "css"
  ],
  "homepage": "https://github.com/haet/CssToInlineStyles",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Tijs Verkoyen",
      "email": "css_to_inline_styles@verkoyen.eu",
      "role": "Developer"
    },
    {
      "name": "Lars Moelleken",
      "email": "lars@moelleken.org",
      "homepage": "https://github.com/voku",
      "role": "Developer"
    }
  ],
  "repositories": [
      {
          "type": "vcs",
          "url": "https://github.com/haet/simple_html_dom"
      }
  ],
  "require": {
    "php": ">=5.6.0",
    "symfony/css-selector": "^2.8|~3.0",
    "haet/simple_html_dom": "1.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0|~5.0"
  },
  "autoload": {
    "psr-4": {
      "haet\\CssToInlineStyles\\": "src"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.6.x-dev"
    }
  },
  "minimum-stability": "dev"
}
